                                                <ul id="animaOneList" class="dropdown-menu scrollable-menu">
                                                </ul>
                                        </div>
                                        <div id="animaOneSelection" class="col-md-2">selection 2</div>
                                </div>
                                <div id="line-3" class="row">
                                        <div class="dropdown col-md-2">
                                                <button id="animaTwoBtn"
                                                        class="w-100 btn-sm btn-secondary dropdown-toggle"
                                                        type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                        Anima Two
                                                </button>
                                                <ul id="animaTwoList" class="dropdown-menu scrollable-menu">
                                                </ul>
                                        </div>
                                        <div id="animaTwoSelection" class="col-md-2">selection 3</div>
                                </div>
                                <div id="line-4" class="row">
                                        <div class="dropdown col-md-2">
                                                <button id="animaThreeBtn"
                                                        class="w-100 btn-sm btn-secondary dropdown-toggle"
