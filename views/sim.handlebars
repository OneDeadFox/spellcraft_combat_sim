                                                <ul id="animaThreeList" class="dropdown-menu scrollable-menu">
                                                </ul>
                                        </div>
                                        <div id="animaThreeSelection" class="col-md-2">selection 4</div>
                                </div>
                                <div id="line-5" class="row">
                                        <div class="dropdown col-md-2">
                                                <button id="enemyBtn"
                                                        class="w-100 btn-sm btn-secondary dropdown-toggle"
                                                        type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                        Select Enemy
                                                </button>
                                                <ul id="enemyList" class="dropdown-menu scrollable-menu">
                                                </ul>
                                        </div>
                                        <div id="enemySelection" class="col-md-2">selection 5</div>
                                </div>
                                <button id="sim-submit" type="button" class="w-25 btn btn-secondary btn-sm">Submit</button>
                        </div>
                </div>
        </section>
</section>

