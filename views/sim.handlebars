                                        <div class="dropdown col-md-2">
                                                <button id="animaSpdBtn"
                                                        class="w-100 btn-sm btn-secondary dropdown-toggle"
                                                        type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                        Select Speed
                                                </button>
                                                <ul id="animaSpdList" class="dropdown-menu scrollable-menu">
                                                </ul>
                                        </div>
                                        <div id="spdSelection" class="col-md-2">selection 1</div>
                                </div>
                                <div id="line-2" class="row">
                                        <div class="dropdown col-md-2">
                                                <button id="animaOneBtn"
                                                        class="w-100 btn-sm btn-secondary dropdown-toggle"
                                                        type="button" data-bs-toggle="dropdown" aria-expanded="false">
